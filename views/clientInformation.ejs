<% include partials/header.ejs %>
<div class = "jumbotro jumbotro-fluid bg-dark">
   <div class = row>
      <div class = col-md-4 ></div>
      <div class = col-md-4>
         <br>
         <h1 class = "text-center light text-light"> Client Information </h1>
         <br>
      </div>
      <div class = col-md-4></div>
   </div>
</div>
<div class ="row bg-light">
   <div class = "col-sm-3"></div>
   <div class = "col-sm-6">
      <br><br>
      <a href="/add" class="btn btn-block btn-primary">Add Client</a></div>
   <div class = "col-sm-3"></div>

</div>
<div class ="row bg-light">
   <br><br>
</div>
        <% if (clients.length > 0) {%>
            <table class="table table-hover table-bordered">
                <thead class="thead-dark ">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach((client, index) => { %>
                        <tr>
                            <th scope="row"><%= client.clientId %></th>
                            <td><%= client.fullName %></td>
                            <td><%= client.address %></td>
                            <td><%= client.city %></td>
                            <td><%= client.state %></td>
                            <td><%= client.zipCode %></td>
                            <td><%= client.phone %></td>
                            <td><%= client.email %></td>
                            <td>
                                <a href="/edit/<%= client.clientId %>" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= client.clientId %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No clients found. Go <a href="/add" >here</a> to add client information.</p>
        <% } %>
</div>
</body>
</html>
