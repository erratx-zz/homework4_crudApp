<div class = "jumbotro jumbotro-fluid bg-dark">
   <div class = row>
      <div class = col-md-3 ></div>
      <div class = col-md-6>
         <br>
         <h1 class = "text-center light text-light"> New Client Information Form </h1>
         <br>
      </div>
      <div class = col-md-3></div>
   </div>
</div>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <br><br><br>
        <form class="add-client-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name" required>
                </div>
                <div class="form-group col-md-3">
                    <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last Name" required>
                </div>
