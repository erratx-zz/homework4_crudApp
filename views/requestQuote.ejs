<% include partials/header.ejs %>
<div class = "jumbotro jumbotro-fluid bg-dark">
   <div class = row>
      <div class = col-md-3 ></div>
      <div class = col-md-6>
         <br>
         <h1 class = "text-center light text-light"> Request a Quote </h1>
         <br>
      </div>
      <div class = col-md-3></div>
   </div>
</div>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
         <br><br><br>
        <form class="add-client-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <input type="text" class="form-control" name="deliveryEmail" id="deliveryEmail" placeholder="Email" required>
                </div>
                <div class="form-group col-md-3">
                    <input type="number" step = "0.01" class="form-control" name="gallonsRequested" id="gallonsRequested" placeholder="Gallons" required>
                </div>
                <div class="form-group col-md-3">
                    <input type="number" step = "0.01" class="form-control" name="suggestedPrice" id="suggestedPrice" placeholder="Suggested Price" required>
                </div>
                <div class="form-group col-md-3">
                    <input type="date" class="form-control" name="deliveryDate" id="deliveryDate" placeholder="Delivery Date" required>
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary float-left">Request Quote</button>
        </form>
    </div>
</div>
</body>
</html>
